{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<section class="main-section" id="log" style="margin-left: 15%; margin-right: 15%;">
    <div class="container">
        <h2>Se connecter</h2>
        <h6>Connectez-vous à votre compte ou jouez en tant qu'invité.</h6>
        <div class="row">
            <div class="col-lg-6 col-sm-6 wow fadeInLeft delay-05s" style="padding-left: 10%;">
                <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div>
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>

            <div>
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" />
            </div>

            <div>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
            </div>
            <div class="col-lg-6 col-sm-6 wow fadeInRight delay-05s" style="padding-left: 25%">
                <div class="service-list">
                    <label>Pseudo</label>
                    <input type="text" placeholder="Pseudo" style="display: block;"/>
                </div>
                <div class="service-list">
                    <input type="button" value="Connexion">
                </div>
            </div>

        </div>
    </div>
</section>
