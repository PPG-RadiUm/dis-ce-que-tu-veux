{% trans_default_domain 'FOSUserBundle' %}

<form id="fos_user_profile_form" name="fos_user_profile_form" action="{{ path('fos_user_profile_edit') }}" method="post">
    <div class="ACon">
        <div class="Profile">
            <div class="Img">
                <div class="overlay">
                    <span><img /></span>
                </div>
            </div>
            <div class="PopUp">Editer le profil</div>
            <div class="clickPopUp">
                <h4><a class="username" href="">Editer le profil</a></h4>
                <h5 class="buttons">
                    {{ form_widget(form.username, { 'attr': {'placeholder': 'Pseudo'} }) }}
                </h5>
                <h5 class="buttons">
                    {{ form_widget(form.email, { 'attr': {'placeholder': 'Email'} }) }}
                </h5>
                <h5 class="buttons b">
                    <input type="password" id="fos_user_profile_form_current_password" placeholder="Votre mot de passe"
                           name="fos_user_profile_form[current_password]" required="required">
                </h5>
                <div class="Social">
                    <a href="javascript:{}" onclick="document.forms['fos_user_profile_form'].submit();">
                        <img id="logo" src="{{ asset('img/validate.svg') }}" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>